<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Shopify Collections</title>
</head>
<body>
    <div class="container">
        <h1 class="my-4">Shopify Collections</h1>
        <div class="row">
            <% collections.forEach(collection => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="<%= collection.image ? collection.image.src : 'placeholder.jpg' %>" class="card-img-top" alt="<%= collection.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= collection.title %></h5>
                            <p class="card-text"><%= collection.body_html ? collection.body_html.replace(/(<([^>]+)>)/gi, "") : '' %></p>
                            <a href="/collection/<%= collection.id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
